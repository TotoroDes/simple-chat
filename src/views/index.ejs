<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Chat</title>
        <link rel="stylesheet" href="/styles/Form.css">
    </head>
    <body>
        <form action="/chat" class="Form" method="post">
            <fieldset>
                <div class="Form-field">
                    <label for="messageAuthor">Author:</label>
                    <input type="text" name="message[author]">
                </div>
                <div class="Form-field">
                    <label class="Form-label" for="messageText">Message</label>
                    <textarea name="message[text]" id="messageText" cols="30" rows="10"></textarea>
                </div>
                <button type="submit">Send</button>
            </fieldset>
        </form>
    </body>
</html>